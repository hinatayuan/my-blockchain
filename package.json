{
  "name": "my-blockchain",
  "version": "1.0.0",
  "description": "A simple blockchain implementation with CosmJS integration and React frontend",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec ts-node src/server.ts",
    "client:dev": "cd client && npm start",
    "build": "npm run build:server && cd client && npm run build",
    "build:server": "tsc",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@cosmjs/crypto": "^0.31.0",
    "@cosmjs/encoding": "^0.31.0",
    "@cosmjs/proto-signing": "^0.31.0",
    "@cosmjs/stargate": "^0.31.0",
    "@noble/secp256k1": "^2.3.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.5",
    "@types/uuid": "^9.0.2",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "blockchain",
    "cosmjs",
    "cryptocurrency",
    "mining",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
